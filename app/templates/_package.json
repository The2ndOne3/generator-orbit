{
  "name": "<%= _.slugify(name) %>",
  "author": "<%= author %>",
  "version": "0.0.1",
  "description": "<%= description %>",
  "private": true,
  "scripts": {
    "start": "nodemon bin/orbit.js",
    "postinstall": "bower install",
    "test": "mocha --reporter spec"
  },
  "dependencies": {
    "express": "*",
    "express-enrouten": "*",
    "helmet": "*",

    "<%= server_view %>": "*",

    <% if(css == 'stylus') { %>"stylus": "*", "nib": "*",<% }
       if(css == 'sass') { %>"node-sass": "*", "compass": "*",<% }
       if(css == 'less') { %>"less-middleware": "*",<% } %>

    "bower": "*",
    "nodemon": "*",

    "q": "*"
  },
  "devDependencies": {
    "mocha": "*",
    "chai": "*",
    "supertest": "*",

    "grunt": "*",<% if(css == 'stylus') { %>
    "grunt-contrib-stylus": "*",<% } %>
    "grunt-contrib-clean": "*",
    "grunt-contrib-jshint": "*",<% if(requirejs) { %>
    "grunt-contrib-requirejs": "*",<% } %>
    "grunt-mocha-cli": "*",
    "grunt-copy-to": "*"
  },
  "engines": {
    "node": ">= 0.8.0"
  }
}
